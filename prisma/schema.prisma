generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserData {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  username  String
  stats     Stats[]
}

model Stats {
  id                       String    @id @default(uuid())
  allTimeWpm               Float
  totalTestsCompleted      Int
  totalTestsStarted        Int
  totalTimeTyped           Int
  totalWordsTyped          Int
  totalLettersTyped        Int
  totalCorrectLettersTyped Int
  totalMistakes            Int
  UserData                 UserData? @relation(fields: [userDataId], references: [id])
  userDataId               String?
}

model Quote {
  id        String   @id @default(uuid())
  quote     String
  author    String
  createdAt DateTime @default(now())
  length    String
}
